<UserControl
    x:Class="ProjectTimeAssistant.Views.UserControls.TitledPageHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjectTimeAssistant.Views.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:usercontrols="using:ProjectTimeAssistant.Views.UserControls"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Background="{ThemeResource MenuFlyoutItemFocusedBackgroundThemeBrush}" Height="80" Margin="0" Padding="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="450"/>
            <ColumnDefinition MinWidth="450"/>
        </Grid.ColumnDefinitions>
        <usercontrols:ProfileUserControl Grid.Column="1" HorizontalAlignment="Right" Margin="0" Padding="0"/>
        <Grid Grid.Column="0" Height="80" Width="450" Margin="0" Padding="80,0,80,0" VerticalAlignment="Center" HorizontalAlignment="Left" Background="{ThemeResource MenuFlyoutItemFocusedBackgroundThemeBrush}">
            <TextBlock Text="{x:Bind Label}" Margin="0" Foreground="{ThemeResource ApplicationForegroundThemeBrush}"  FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center" />
        </Grid>
    </Grid>
    
</UserControl>
